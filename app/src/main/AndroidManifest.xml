<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kriskrause.learning"
    android:versionCode="3"
    android:versionName="1.2" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_about_activity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kriskrause.learning.MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_settings_activity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kriskrause.learning.MainActivity" />
        </activity>
        <activity
            android:name=".CustomCharListActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_custom_char_activity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kriskrause.learning.MainActivity" />
        </activity>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kriskrause.learning.MainActivity" />
        </activity>
    </application>

</manifest>
